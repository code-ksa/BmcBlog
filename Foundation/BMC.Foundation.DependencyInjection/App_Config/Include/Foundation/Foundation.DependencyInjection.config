<?xml version="1.0" encoding="utf-8"?>
<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <pipelines>
      <!-- Initialize Dependency Injection Container on Application Start -->
      <initialize>
        <processor type="BMC.Foundation.DependencyInjection.Pipelines.InitializeDependencyInjection, BMC.Foundation.DependencyInjection"
                   patch:before="processor[@type='Sitecore.Pipelines.Loader.ShowVersion, Sitecore.Kernel']" />
      </initialize>
    </pipelines>

    <settings>
      <!-- Dependency Injection Settings -->
      <setting name="BMC.Foundation.DependencyInjection.Enabled" value="true" />
      <setting name="BMC.Foundation.DependencyInjection.LogRegistrations" value="false" />
    </settings>

    <services>
      <!-- Service registrations can be added here -->
    </services>

    <log4net>
      <logger name="BMC.Foundation.DependencyInjection" additivity="false">
        <level value="INFO" />
        <appender-ref ref="LogFileAppender" />
      </logger>
    </log4net>
  </sitecore>
</configuration>
