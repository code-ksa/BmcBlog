<?xml version="1.0" encoding="utf-8"?>
<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:role="http://www.sitecore.net/xmlconfig/role/">
  <sitecore role:require="Standalone or ContentManagement or ContentDelivery">
    <settings>
      <!-- Indexing Settings -->
      <setting name="BMC.Foundation.Indexing.BlogIndexName" value="sitecore_master_index" />
      <setting name="BMC.Foundation.Indexing.EnableComputedFields" value="false" />
      <setting name="BMC.Foundation.Indexing.RebuildOnPublish" value="false" />
    </settings>

    <log4net>
      <logger name="BMC.Foundation.Indexing" additivity="false">
        <level value="INFO" />
        <appender-ref ref="LogFileAppender" />
      </logger>
    </log4net>
  </sitecore>
</configuration>