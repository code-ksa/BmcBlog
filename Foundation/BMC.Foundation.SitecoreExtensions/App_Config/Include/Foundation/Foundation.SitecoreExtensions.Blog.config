<?xml version="1.0" encoding="utf-8"?>
<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <settings>
      <!-- BMC Blog Settings -->
      <setting name="BMC.Blog.EnableDetailedLogging" value="false" />
      <setting name="BMC.Blog.AutoInitialize" value="false" />
    </settings>

    <log4net>
      <logger name="BMC.Foundation.SitecoreExtensions.Blog" additivity="false">
        <level value="INFO" />
        <appender-ref ref="LogFileAppender" />
      </logger>
    </log4net>
  </sitecore>
</configuration>
