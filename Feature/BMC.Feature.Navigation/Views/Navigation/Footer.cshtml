@model List<BMC.Feature.Navigation.Models.NavigationItemModel>
@using BMC.Foundation.Multisite.Helpers

@{
    var currentLanguage = Sitecore.Context.Language.Name;
    var isRtl = RtlHelper.IsRtlLanguage(currentLanguage);
    var direction = RtlHelper.GetDirection();
    var currentYear = DateTime.Now.Year;
}

<footer class="footer bg-dark text-white py-5" dir="@direction">
    <div class="container">
        <div class="row">
            <div class="col-md-4 mb-4">
                <h5 class="mb-3">@(currentLanguage == "ar" ? "عن BMC" : "About BMC")</h5>
                <p>@(currentLanguage == "ar" ? "شركة BMC الرائدة في المملكة العربية السعودية" : "BMC is a leading company in Saudi Arabia")</p>
                <div class="social-links mt-3">
                    <a href="#" class="text-white mr-3"><i class="fab fa-facebook fa-lg"></i></a>
                    <a href="#" class="text-white mr-3"><i class="fab fa-twitter fa-lg"></i></a>
                    <a href="#" class="text-white mr-3"><i class="fab fa-linkedin fa-lg"></i></a>
                    <a href="#" class="text-white mr-3"><i class="fab fa-instagram fa-lg"></i></a>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <h5 class="mb-3">@(currentLanguage == "ar" ? "روابط سريعة" : "Quick Links")</h5>
                <ul class="list-unstyled">
                    @if (Model != null)
                    {
                        foreach (var item in Model.Take(5))
                        {
                            <li class="mb-2">
                                <a href="@item.Url" class="text-white-50">@item.Title</a>
                            </li>
                        }
                    }
                </ul>
            </div>

            <div class="col-md-4 mb-4">
                <h5 class="mb-3">@(currentLanguage == "ar" ? "تواصل معنا" : "Contact Us")</h5>
                <ul class="list-unstyled">
                    <li class="mb-2">
                        <i class="fas fa-map-marker-alt"></i>
                        @(currentLanguage == "ar" ? "الرياض، المملكة العربية السعودية" : "Riyadh, Saudi Arabia")
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-phone"></i> +966 XX XXX XXXX
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-envelope"></i> info@bmc.sa
                    </li>
                </ul>
            </div>
        </div>

        <hr class="bg-white my-4" />

        <div class="row">
            <div class="col-md-12 text-center">
                <p class="mb-0">
                    &copy; @currentYear @(currentLanguage == "ar" ? "BMC. جميع الحقوق محفوظة." : "BMC. All rights reserved.")
                </p>
            </div>
        </div>
    </div>
</footer>

<style>
    .footer a {
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .footer a:hover {
        color: #fff !important;
    }

    .social-links a {
        transition: transform 0.3s ease;
        display: inline-block;
    }

    .social-links a:hover {
        transform: translateY(-3px);
    }
</style>