<?xml version="1.0" encoding="utf-8"?>
<!--
  Purpose: Provide empty/disabled federatedAuthentication configuration
  This file loads EARLY (001 prefix) to establish the configuration before other configs try to patch it
-->
<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:role="http://www.sitecore.net/xmlconfig/role/">
  <sitecore role:require="Standalone or ContentManagement">
    
    <settings>
      <!-- Disable Federated Authentication -->
      <setting name="FederatedAuthentication.Enabled" value="false" />
      
      <!-- Ensure traditional login is used -->
      <setting name="Authentication.LoginPage" value="/sitecore/login" />
    </settings>

    <!-- Provide a minimal but valid federatedAuthentication configuration -->
    <federatedAuthentication type="Sitecore.Owin.Authentication.Configuration.FederatedAuthenticationConfiguration, Sitecore.Owin.Authentication">
      
      <identityProviders hint="list:AddIdentityProvider">
        <!-- Empty - no identity providers configured -->
      </identityProviders>

      <identityProvidersPerSites hint="list:AddIdentityProvidersPerSites">
        <!-- Empty - no site mappings -->
      </identityProvidersPerSites>

      <sharedTransformations hint="list:AddTransformation">
        <!-- Empty - no transformations -->
      </sharedTransformations>

    </federatedAuthentication>

  </sitecore>
</configuration>
