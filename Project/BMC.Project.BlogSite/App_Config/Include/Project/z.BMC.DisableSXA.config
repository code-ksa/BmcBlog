<?xml version="1.0" encoding="utf-8"?>
<!--
  Purpose: Disable problematic SXA initialization that requires authentication
-->
<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:role="http://www.sitecore.net/xmlconfig/role/">
  <sitecore role:require="Standalone or ContentManagement">
    
    <!-- Only disable SXA initialization that causes authentication issues, keep the provider -->
    <pipelines>
      <initialize>
        <processor type="Sitecore.XA.Foundation.Multisite.Pipelines.Initialize.InitSiteManager, Sitecore.XA.Foundation.Multisite">
          <patch:delete />
        </processor>
      </initialize>
    </pipelines>

  </sitecore>
</configuration>
