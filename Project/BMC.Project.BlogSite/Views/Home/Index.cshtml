@model List<BMC.Feature.Blog.Models.BlogPostModel>
@using BMC.Foundation.Multisite.Helpers
@{
    Layout = "~/Views/Layouts/Default.cshtml";
    ViewBag.Title = "Home";
    var currentLanguage = Sitecore.Context.Language.Name;
}

<!-- Hero Slider Section -->
<section class="hero-section">
    @Html.Action("Index", "HeroSlider", new { area = "" })
</section>

<!-- Breadcrumb -->
<section class="breadcrumb-section">
    <div class="container">
        @Html.Action("Breadcrumb", "Navigation", new { area = "" })
    </div>
</section>

<!-- Main Content -->
<section class="content-section py-5">
    <div class="container">
        <div class="row">
            <!-- Main Content Area -->
            <div class="col-lg-8">
                <h2 class="mb-4">
                    <i class="fas fa-newspaper"></i> 
                    @(currentLanguage == "ar" ? "أحدث المقالات" : "Latest Articles")
                </h2>

                @if (Model != null && Model.Any())
                {
                    <div class="row">
                        @foreach (var post in Model)
                        {
                            <div class="col-md-6 mb-4">
                                <article class="blog-card card h-100 shadow-sm">
                                    @if (!string.IsNullOrEmpty(post.FeaturedImageUrl))
                                    {
                                        <img src="@post.FeaturedImageUrl" class="card-img-top" alt="@post.Title" />
                                    }
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <a href="@post.Url">@post.Title</a>
                                        </h5>
                                        <p class="card-text text-muted small">
                                            <i class="far fa-calendar"></i> @post.PublishDate.ToString("MMM dd, yyyy")
                                            @if (post.Category != null)
                                            {
                                                <span class="ml-2">
                                                    <i class="fas fa-folder"></i> @post.Category.DisplayName
                                                </span>
                                            }
                                        </p>
                                        <p class="card-text">@post.Summary</p>
                                        <a href="@post.Url" class="btn btn-outline-primary btn-sm">
                                            @(currentLanguage == "ar" ? "اقرأ المزيد" : "Read More") 
                                            <i class="fas fa-arrow-@(RtlHelper.IsRtlLanguage(currentLanguage) ? "left" : "right")"></i>
                                        </a>
                                    </div>
                                    <div class="card-footer text-muted small">
                                        <i class="fas fa-eye"></i> @post.ViewCount @(currentLanguage == "ar" ? "مشاهدة" : "views")
                                    </div>
                                </article>
                            </div>
                        }
                    </div>

                    <div class="text-center mt-4">
                        <a href="/blog" class="btn btn-primary btn-lg">
                            @(currentLanguage == "ar" ? "عرض جميع المقالات" : "View All Articles")
                        </a>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> 
                        @(currentLanguage == "ar" ? "لا توجد مقالات متاحة حالياً" : "No articles available at the moment")
                    </div>
                }
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Newsletter Subscription -->
                <div class="mb-4">
                    @Html.Action("Subscribe", "Newsletter", new { area = "" })
                </div>

                <!-- Categories Widget -->
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-list"></i> 
                            @(currentLanguage == "ar" ? "التصنيفات" : "Categories")
                        </h5>
                    </div>
                    <div class="card-body">
                        <!-- Categories will be loaded here -->
                        <ul class="list-unstyled mb-0">
                            <li><a href="/category/technology">Technology</a></li>
                            <li><a href="/category/business">Business</a></li>
                            <li><a href="/category/lifestyle">Lifestyle</a></li>
                        </ul>
                    </div>
                </div>

                <!-- Popular Posts Widget -->
                <div class="card mb-4">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-fire"></i> 
                            @(currentLanguage == "ar" ? "الأكثر شهرة" : "Popular Posts")
                        </h5>
                    </div>
                    <div class="card-body">
                        <!-- Popular posts will be loaded here -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .hero-section {
        margin-bottom: 2rem;
    }

    .blog-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .blog-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15) !important;
    }

    .blog-card .card-img-top {
        height: 200px;
        object-fit: cover;
    }

    .blog-card .card-title a {
        color: #333;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .blog-card .card-title a:hover {
        color: #007bff;
    }
</style>